    "version": "0.2.0",
    "configurations": [
        {
            "name": "APIServer",
            "type": "coreclr",
            "request": "launch",
            // "preLaunchTask": "build",
            "program": "${workspaceFolder}/Src/APIServer/API/bin/Debug/net5.0/APIServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Src/APIServer/API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            // "sourceFileMap": {
            //     "/Views": "${workspaceFolder}/Views"
            // }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}